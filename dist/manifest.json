{
  "manifest_version": 3,
  "name": "Devin Status Checker",
  "version": "0.0.0",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],

  "host_permissions": ["https://preview.devin.ai/devin/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://preview.devin.ai/devin/*"],
      "js": ["popup.js"]
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
