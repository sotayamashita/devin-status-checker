{
  "private": true,
  "name": "devin-status-checker",
  "version": "0.0.0",
  "scripts": {
    "prepare": "husky install",
    "build": "parcel build src/manifest.json --dist-dir dist --no-content-hash --no-source-maps --no-cache --detailed-report 0 --config @parcel/config-webextension",
    "watch:ext": "parcel watch src/manifest.json --host localhost --config @parcel/config-webextension",
    "watch:chrome": "web-ext run -t chromium",
    "type-check": "tsc --noEmit"
  },
  "webExt": {
    "sourceDir": "dist"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "tsc --noEmit"
    ]
  },
  "renovate": {
    "extends": [
      "config:recommended"
    ]
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.12.0",
    "@types/chrome": "^0.0.267",
    "@types/node": "^20.12.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "parcel": "^2.12.0",
    "playwright": "^1.43.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "web-ext": "^7.11.0"
  }
}
