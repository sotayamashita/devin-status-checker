{
  "manifest_version": 3,
  "name": "Devin Status Checker",
  "version": "1.0.0",
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.ts"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
